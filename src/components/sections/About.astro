<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-3 mt-8 pt-6 border-t border-gray-200">
  <div class="text-center">
    <span class="block text-xl md:text-xl font-display font-semibold text-[#367588]">
      +200
    </span>
    <span class="text-xs text-gray-600">Pacientes atendidas</span>
  </div>

  <div class="text-center">
    <span class="block text-xl md:text-xl font-display font-semibold text-[#CC8989]">
      100%
    </span>
    <span class="text-xs text-gray-600">Confidencialidad</span>
  </div>

  <div class="text-center">
    <span class="block text-xl md:text-xl font-display font-semibold text-[#367588]">
      Online
    </span>
    <span class="text-xs text-gray-600">Sesiones virtuales</span>
  </div>

  <div class="text-center">
    <span class="block text-xl md:text-xl font-display font-semibold text-[#CC8989]">
      Presenciales
    </span>
    <span class="text-xs text-gray-600">Santo Domingo de Heredia</span>
  </div>
</div>


