---
// Header.astro
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
>
  <div class="container mx-auto px-4 lg:px-6 xl:px-8">
    <nav class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="#inicio" class="flex items-center gap-2">
        <span class="font-serif text-lg md:text-xl lg:text-lg xl:text-2xl font-semibold">
          <span class="text-[#367588]">Amelia.</span><span class="text-[#CC8989]">psicomamaypareja</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-4 xl:gap-6 2xl:gap-8">
        <a
          href="/#inicio"
          class="text-gray-600 hover:text-[#367588] transition-colors duration-200 text-sm xl:text-base font-medium whitespace-nowrap"
          >Inicio</a
        >
        <a
          href="/#sobre-mi"
          class="text-gray-600 hover:text-[#367588] transition-colors duration-200 text-sm xl:text-base font-medium whitespace-nowrap"
          >Sobre mí</a
        >
        <a
          href="/#servicios"
          class="text-gray-600 hover:text-[#367588] transition-colors duration-200 text-sm xl:text-base font-medium whitespace-nowrap"
          >Servicios</a
        >
        <a
          href="/#metodologia"
          class="text-gray-600 hover:text-[#367588] transition-colors duration-200 text-sm xl:text-base font-medium whitespace-nowrap"
          >Metodología</a
        >
        <a
          href="/#testimonios"
          class="text-gray-600 hover:text-[#367588] transition-colors duration-200 text-sm xl:text-base font-medium whitespace-nowrap"
          >Testimonios</a
        >
        <a
          href="/#faqs"
          class="text-gray-600 hover:text-[#367588] transition-colors duration-200 text-sm xl:text-base font-medium whitespace-nowrap"
          >FAQS</a
        >
        <a
          href="/#contacto"
          class="text-gray-600 hover:text-[#367588] transition-colors duration-200 text-sm xl:text-base font-medium whitespace-nowrap"
          >Contacto</a
        >

        <a
          href="https://www.instagram.com/ame.psicomamaypareja/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[#CC8989] hover:text-[#CC8989]/80 transition-colors shrink-0"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>

        <a
          href="#contacto"
          class="bg-[#CC8989] text-white px-4 xl:px-6 py-2.5 rounded-full text-sm xl:text-base font-medium hover:bg-[#CC8989]/90 transition-colors whitespace-nowrap shrink-0"
          >Agenda tu cita</a
        >
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-600">
        <svg
          id="menu-icon"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
        <svg
          id="close-icon"
          class="hidden"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </nav>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden lg:hidden absolute top-20 left-0 right-0 bg-[#f5ebe6]/98 backdrop-blur-md shadow-lg"
    >
      <div class="flex flex-col p-6 gap-4">
        <a
          href="/#inicio"
          class="mobile-link text-gray-600 hover:text-[#367588] transition-colors duration-200 py-2 text-lg"
          >Inicio</a
        >
        <a
          href="/#sobre-mi"
          class="mobile-link text-gray-600 hover:text-[#367588] transition-colors duration-200 py-2 text-lg"
          >Sobre mí</a
        >
        <a
          href="/#servicios"
          class="mobile-link text-gray-600 hover:text-[#367588] transition-colors duration-200 py-2 text-lg"
          >Servicios</a
        >
        <a
          href="/#metodologia"
          class="mobile-link text-gray-600 hover:text-[#367588] transition-colors duration-200 py-2 text-lg"
          >Metodología</a
        >
        <a
          href="/#testimonios"
          class="mobile-link text-gray-600 hover:text-[#367588] transition-colors duration-200 py-2 text-lg"
          >Testimonios</a
        >
        <a
          href="/#faqs"
          class="mobile-link text-gray-600 hover:text-[#367588] transition-colors duration-200 py-2 text-lg"
          >FAQS</a
        >
        <a
          href="/#contacto"
          class="mobile-link text-gray-600 hover:text-[#367588] transition-colors duration-200 py-2 text-lg"
          >Contacto</a
        >

        <div class="flex items-center gap-4 pt-4 border-t border-gray-300">
          <a
            href="https://www.instagram.com/ame.psicomamaypareja/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[#CC8989]"
          >
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a
            href="#contacto"
            class="mobile-link flex-1 bg-[#CC8989] text-white px-6 py-3 rounded-full text-center font-medium hover:bg-[#CC8989]/90 transition-colors"
            >Agenda tu cita</a
          >
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById("header");
  const menuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");
  const mobileLinks = document.querySelectorAll(".mobile-link");

  // Handle scroll effect
  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      header?.classList.add("bg-[#f5ebe6]/95", "backdrop-blur-md", "shadow-lg");
    } else {
      header?.classList.remove(
        "bg-[#f5ebe6]/95",
        "backdrop-blur-md",
        "shadow-lg",
      );
    }
  });

  // Toggle mobile menu
  menuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
    menuIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");
  });

  // Close mobile menu when clicking a link
  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
    });
  });
</script>