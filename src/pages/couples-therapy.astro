---
import MainLayout from "@/layouts/MainLayout.astro";
import ameliaProfile from "@/assets/images/amelia-women-therapy.jpeg";

const focusAreas = [
  {
    icon: "message-circle",
    title: "Comunicación efectiva",
    description: "Identificar patrones de comunicación que generan conflicto o distancia.",
  },
  {
    icon: "heart-handshake",
    title: "Habilidades relacionales",
    description: "Desarrollar habilidades de comunicación más claras, respetuosas y empáticas.",
  },
  {
    icon: "shield-check",
    title: "Creencias y expectativas",
    description: "Trabajar creencias sobre el amor, el compromiso, el rol de cada persona en la relación y las expectativas irreales.",
  },
  {
    icon: "target",
    title: "Conexión emocional",
    description: "Fortalecer la conexión emocional y la validación mutua.",
  },
  {
    icon: "users",
    title: "Acuerdos realistas",
    description: "Promover acuerdos realistas sobre la convivencia, la crianza, el manejo de conflictos y las necesidades individuales.",
  },
];

const siteUrl = "https://psicologaameliareyes.com";
const pageUrl = `${siteUrl}/couples-therapy`;
const imageUrl = `${siteUrl}${ameliaProfile.src}`;

const jsonLdService = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Terapia de Pareja",
  "description": "Terapia de pareja con enfoque cognitivo-conductual en Costa Rica. Mejorá la comunicación, resolvé conflictos y reconectá emocionalmente con tu pareja. Sesiones online con la Psicóloga Amelia Reyes.",
  "url": pageUrl,
  "image": imageUrl,
  "provider": {
    "@type": "Person",
    "name": "Amelia Reyes",
    "jobTitle": "Psicóloga Clínica",
    "url": siteUrl,
  },
  "areaServed": { "@type": "Country", "name": "Costa Rica" },
  "availableChannel": { "@type": "ServiceChannel", "serviceType": "Online", "availableLanguage": "es" },
  "serviceType": "Psicología Clínica",
  "audience": { "@type": "Audience", "audienceType": "Parejas adultas" },
};

const jsonLdBreadcrumb = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Inicio", "item": siteUrl },
    { "@type": "ListItem", "position": 2, "name": "Servicios", "item": `${siteUrl}/#servicios` },
    { "@type": "ListItem", "position": 3, "name": "Terapia de Pareja", "item": pageUrl },
  ],
};
---

<MainLayout
  title="Terapia de Pareja | Psicóloga Amelia Reyes | Costa Rica"
  description="Terapia de pareja con enfoque cognitivo-conductual en Costa Rica. Mejorá la comunicación, resolvé conflictos y reconectá emocionalmente. Sesiones online con la Psicóloga Amelia Reyes."
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLdService)} />
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLdBreadcrumb)} />

  <div class="min-h-screen bg-[#F4F0EC]">

    <!-- ===== HERO ===== -->
    <section class="relative pt-20 pb-16 md:pt-24 md:pb-20 lg:pt-28 lg:pb-24 overflow-hidden bg-[#F4F0EC]">
      <!-- Línea superior teal -->
      <div class="absolute top-0 left-0 w-full h-1 bg-linear-to-r from-[#367588] via-[#CC8989] to-[#367588]"></div>
      <!-- Blur decorativo -->
      <div class="hidden md:block absolute -bottom-20 right-0 w-96 h-96 bg-[#367588]/5 rounded-full blur-3xl pointer-events-none"></div>

      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">

        <!-- Volver al inicio -->
        <a
          href="/"
          class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-gray-800 transition-colors mb-8 md:mb-10"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Volver al inicio
        </a>

        <!-- Hero texto — 1 columna, max-w-3xl -->
        <div class="max-w-3xl">
          <span class="inline-block mb-4 px-4 py-1.5 bg-[#367588]/15 text-[#367588] rounded-full text-sm font-medium">
            Servicio especializado
          </span>
          <h1 class="font-display text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-semibold text-[#183942] leading-tight mb-5 md:mb-6">
            Terapia de
            <span class="italic bg-linear-to-br from-[#367588] to-[#367588]/30 bg-clip-text text-transparent"> Pareja</span>
          </h1>
          <p class="text-base sm:text-lg md:text-xl text-gray-600 leading-relaxed mb-8 md:mb-10 max-w-2xl">
            Un espacio para comprender y transformar los patrones de interacción que generan distancia, conflicto o desgaste emocional en la relación.
          </p>
          <a
            href="https://wa.me/50660587256?text=Hola%20Amelia%2C%20me%20interesa%20el%20servicio%20de%20Terapia%20de%20Pareja"
            class="inline-flex items-center justify-center px-6 py-3.5 md:px-8 md:py-4 bg-[#367588] text-white text-sm md:text-base font-semibold rounded-full hover:bg-[#367588]/90 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            aria-label="Agendar cita de Terapia de Pareja por WhatsApp"
          >
            Agenda tu cita
          </a>
        </div>
      </div>
    </section>

    <!-- ===== CONTENIDO + IMAGEN LATERAL ===== -->
    <section class="py-12 md:py-16 lg:py-20 bg-white" aria-labelledby="content-heading">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">

        <!--
          mobile:  1 columna
          tablet:  1 columna centrada
          desktop: 5 columnas — texto ocupa 3, imagen ocupa 2
        -->
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 md:gap-10 lg:gap-12 items-start">

          <!-- Texto -->
          <div class="lg:col-span-3 space-y-6 md:space-y-8">
            <div>
              <h2 id="content-heading" class="font-display text-2xl md:text-3xl font-semibold text-[#183942] mb-4 md:mb-6">
                ¿Cómo funciona la terapia de pareja?
              </h2>
              <p class="text-base md:text-lg text-gray-600 leading-relaxed mb-4 md:mb-6">
                Desde un enfoque cognitivo-conductual, se parte de la idea de que los pensamientos, las emociones y las conductas de cada persona influyen en la dinámica de la pareja. No solo importa lo que ocurre entre dos personas, sino cómo cada una interpreta lo que ocurre y cómo responde ante eso.
              </p>
              <p class="text-base md:text-lg text-gray-600 leading-relaxed">
                Las investigaciones muestran que muchas dificultades de pareja se mantienen por ciclos repetitivos: críticas, defensividad, silencios, reproches o intentos de control que, aunque buscan proteger, terminan aumentando la desconexión emocional. Pensamientos como <em>"si me amara, sabría lo que necesito"</em>, <em>"siempre tengo que ceder yo"</em> o <em>"nunca me escucha"</em> pueden intensificar la frustración y el conflicto.
              </p>
            </div>

            <!-- Quote -->
            <div class="bg-[#367588]/5 rounded-xl md:rounded-2xl p-6 md:p-8 border-l-4 border-[#367588]">
              <p class="font-display text-base md:text-lg text-[#183942] italic leading-relaxed">
                "No se trata de buscar culpables, sino de ayudar a la pareja a ver los ciclos que se repiten, entender qué los mantiene y construir nuevas formas de vincularse más sanas y conscientes."
              </p>
            </div>
          </div>

          <!-- Imagen lateral -->
          <!-- mobile: debajo del texto, desktop: sticky lateral -->
          <div class="lg:col-span-2 relative">
            <div class="lg:sticky lg:top-32">
              <div class="relative max-w-sm mx-auto lg:mx-0">
                <div class="absolute -inset-3 bg-linear-to-br from-[#367588]/15 to-[#F5DEB3]/30 rounded-4xl -rotate-2"></div>
                <div class="relative rounded-3xl overflow-hidden shadow-lg border-4 border-[#F4C2C2]/70">
                  <img
                    src={ameliaProfile.src}
                    alt="Psicóloga Amelia Reyes en sesión de terapia de pareja"
                    width={ameliaProfile.width}
                    height={ameliaProfile.height}
                    loading="lazy"
                    class="w-full h-auto object-cover"
                  />
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ===== ÁREAS DE ENFOQUE ===== -->
    <section class="py-12 md:py-16 lg:py-20 bg-[#F4F0EC]" aria-labelledby="focus-heading">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">

        <h2 id="focus-heading" class="font-display text-2xl sm:text-3xl md:text-4xl font-semibold text-[#183942] text-center mb-3 md:mb-4">
          Enfoque del <span class="text-[#367588]">trabajo terapéutico</span>
        </h2>
        <p class="text-sm md:text-base text-gray-500 text-center mb-10 md:mb-14 max-w-sm md:max-w-xl mx-auto">
          El trabajo en terapia de pareja se centra en estas áreas fundamentales:
        </p>

        <!--
          mobile:  1 columna
          tablet:  2 columnas
          desktop: 3 columnas
        -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 max-w-5xl mx-auto">
          {focusAreas.map((area) => (
            <div class="group bg-white rounded-xl md:rounded-2xl p-5 md:p-6 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1 border border-gray-100">
              <!-- Ícono -->
              <div class="w-11 h-11 md:w-12 md:h-12 bg-[#367588]/10 rounded-xl flex items-center justify-center mb-3 md:mb-4 group-hover:bg-[#367588]/20 transition-colors">
                {area.icon === "message-circle" && (
                  <svg class="w-5 h-5 md:w-6 md:h-6 text-[#367588]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                  </svg>
                )}
                {area.icon === "heart-handshake" && (
                  <svg class="w-5 h-5 md:w-6 md:h-6 text-[#367588]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
                    <path d="M12 5 9.04 7.96a2.17 2.17 0 0 0 0 3.08c.82.82 2.13.85 3 .07l2.07-1.9a2.82 2.82 0 0 1 3.79 0l2.96 2.66"/>
                    <path d="m18 15-2-2"/>
                    <path d="m15 18-2-2"/>
                  </svg>
                )}
                {area.icon === "shield-check" && (
                  <svg class="w-5 h-5 md:w-6 md:h-6 text-[#367588]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    <path d="m9 12 2 2 4-4"/>
                  </svg>
                )}
                {area.icon === "target" && (
                  <svg class="w-5 h-5 md:w-6 md:h-6 text-[#367588]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <circle cx="12" cy="12" r="10"/>
                    <circle cx="12" cy="12" r="6"/>
                    <circle cx="12" cy="12" r="2"/>
                  </svg>
                )}
                {area.icon === "users" && (
                  <svg class="w-5 h-5 md:w-6 md:h-6 text-[#367588]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                  </svg>
                )}
              </div>
              <h3 class="font-display text-base md:text-lg font-semibold text-[#183942] mb-2">
                {area.title}
              </h3>
              <p class="text-sm text-gray-600 leading-relaxed">
                {area.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ===== EVIDENCIA & CTA ===== -->
    <section class="py-12 md:py-16 lg:py-20 bg-[#F4F0EC]">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-xl md:max-w-2xl lg:max-w-3xl mx-auto text-center">
          <p class="text-base md:text-lg text-gray-600 leading-relaxed mb-8 md:mb-10">
            La terapia cognitivo-conductual en pareja cuenta con amplia evidencia en la reducción del conflicto, el aumento de la satisfacción relacional y la mejora en la resolución de problemas. No se trata de buscar culpables, sino de ayudar a la pareja a ver los ciclos que se repiten, entender qué los mantiene y construir nuevas formas de vincularse más sanas y conscientes.
          </p>
          <a
            href="https://wa.me/50660587256?text=Hola%20Amelia%2C%20me%20interesa%20el%20servicio%20de%20Terapia%20de%20Pareja"
            class="inline-flex items-center justify-center px-6 py-3.5 md:px-8 md:py-4 bg-[#367588] text-white text-sm md:text-base font-semibold rounded-full hover:bg-[#367588]/90 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            aria-label="Agendar cita de Terapia de Pareja por WhatsApp"
          >
            Quiero agendar mi cita
          </a>
        </div>
      </div>
    </section>

  </div>
</MainLayout>